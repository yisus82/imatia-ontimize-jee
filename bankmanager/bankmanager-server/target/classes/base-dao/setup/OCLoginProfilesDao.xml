			<Sentence>
					<![CDATA[
						Select 
							#COLUMNS#
						from 
							${mainschema}.TUSER						
		          		#WHERE#
		          		#ORDER#
					]]>
			</Sentence>
		</Query>
		<Query id="userRoles">
			<AmbiguousColumns>
				<AmbiguousColumn name="USER_" prefix="tu" />
				<AmbiguousColumn name="ID_ROLENAME" prefix="tr" />
			</AmbiguousColumns>
			<Sentence>
					<![CDATA[
					select
						#COLUMNS#
					from
						${mainschema}.TUSER tu
						JOIN ${mainschema}.TUSER_ROLE tur ON tu.USER_ = tur.USER_
						JOIN ${mainschema}.TROLE tr ON tur.ID_ROLENAME = tr.ID_ROLENAME
					#WHERE#
					#ORDER#
					]]>
			</Sentence>
		</Query>
